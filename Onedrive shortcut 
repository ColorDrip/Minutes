import os

# Replace this with your actual OneDrive web URL
onedrive_web_url = "https://onedrive.live.com/?id=YOUR_FOLDER_ID&cid=YOUR_CID"

# Get the path to the desktop
desktop_path = os.path.join(os.path.expanduser("~"), "Desktop")

# Create a folder called 'App' on the desktop
app_folder_path = os.path.join(desktop_path, "App")
os.makedirs(app_folder_path, exist_ok=True)

# Path for the shortcut file
shortcut_path = os.path.join(app_folder_path, "OneDrive Shortcut.url")

# Create the .url shortcut
with open(shortcut_path, "w") as shortcut:
    shortcut.write(f"[InternetShortcut]\nURL={onedrive_web_url}\n")

print(f"Shortcut created successfully: {shortcut_path}")