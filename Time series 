import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.metrics import mean_absolute_percentage_error, mean_squared_error

# 1. Load and clean data
df = pd.read_csv("your_file.csv")

# Ensure Date column exists and is sorted
if 'Date' in df.columns:
    df['Date'] = pd.to_datetime(df['Date'])
    df = df.sort_values('Date')  # Ensure chronological order
else:
    # Create dummy dates if not present
    df['Date'] = pd.date_range(start='2020-01-01', periods=len(df), freq='M')

# Convert all to numeric except Date
numeric_df = df.drop(columns=['Date']).apply(pd.to_numeric, errors='coerce')
numeric_df = numeric_df.replace([np.inf, -np.inf], np.nan).dropna()

# Target variable (Depreciation)
y = numeric_df['Depreciation'].values
dates = df['Date'].iloc[-len(y):]  # Align with cleaned data

# Train-test split (last 20% as test)
split_idx = int(len(y) * 0.8)
y_train, y_test = y[:split_idx], y[split_idx:]
dates_train, dates_test = dates[:split_idx], dates[split_idx:]

# --- Model 1: Simple Average ---
simple_avg_pred = np.full_like(y_test, np.mean(y_train), dtype=float)

# --- Model 2: Moving Average (last 3 months) ---
window = 3
moving_avg_pred = []
for i in range(len(y_test)):
    if split_idx + i - window >= 0:
        avg = np.mean(y[max(0, split_idx + i - window):split_idx + i])
    else:
        avg = np.mean(y[:split_idx])
    moving_avg_pred.append(avg)
moving_avg_pred = np.array(moving_avg_pred)

# --- Model 3: Exponential Smoothing ---
alpha = 0.3  # smoothing factor
ets_pred = []
prev = y_train[0]
# Smooth train
for value in y_train:
    prev = alpha * value + (1 - alpha) * prev
# Forecast test
for value in y_test:
    prev = alpha * value + (1 - alpha) * prev
    ets_pred.append(prev)
ets_pred = np.array(ets_pred)

# --- Evaluation ---
def evaluate(name, y_true, y_pred):
    mape = mean_absolute_percentage_error(y_true, y_pred) * 100
    rmse = np.sqrt(mean_squared_error(y_true, y_pred))
    print(f"{name} -> MAPE: {mape:.2f}%, RMSE: {rmse:.2f}")
    return [name, mape, rmse]

results = []
results.append(evaluate("Simple Average", y_test, simple_avg_pred))
results.append(evaluate("Moving Average", y_test, moving_avg_pred))
results.append(evaluate("Exponential Smoothing", y_test, ets_pred))

# Results table
results_df = pd.DataFrame(results, columns=["Model", "MAPE", "RMSE"])
best_model = results_df.loc[results_df['MAPE'].idxmin()]
print("\nComparison Table:\n", results_df)
print(f"\nBest Model: {best_model['Model']} (MAPE={best_model['MAPE']:.2f}%, RMSE={best_model['RMSE']:.2f})")

# --- Plot with Date on X-axis ---
plt.figure(figsize=(12,6))
plt.plot(dates_test, y_test, label="Actual", marker='o', color='black', linewidth=2)
plt.plot(dates_test, simple_avg_pred, label="Simple Average", linestyle='--', color='blue')
plt.plot(dates_test, moving_avg_pred, label="Moving Average", linestyle='-.', color='green')
plt.plot(dates_test, ets_pred, label="Exponential Smoothing", linestyle=':', color='red')

plt.title("Depreciation Forecast Comparison (Time Series Methods)")
plt.xlabel("Date")
plt.ylabel("Depreciation Value")
plt.legend()
plt.grid(True)
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# Save results
results_df.to_excel("time_series_comparison_with_dates.xlsx", index=False)
print("Comparison results saved to time_series_comparison_with_dates.xlsx")