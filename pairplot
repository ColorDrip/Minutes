import seaborn as sns
import matplotlib.pyplot as plt

# pairplot code
plot = sns.pairplot(df_numeric, diag_kind="kde")

# Rotate axis labels to horizontal
for ax in plot.axes.flatten():
    ax.set_xlabel(ax.get_xlabel(), rotation=0)   # horizontal x-label
    ax.set_ylabel(ax.get_ylabel(), rotation=0)   # horizontal y-label

plt.suptitle("Scatter Plot Matrix of Variables", y=1.02)
plt.show()