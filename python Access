from flask import Flask, render_template, request
import pyodbc

app = Flask(__name__)

# --- DB Connection ---
def get_db_connection():
    conn_str = r'DRIVER={Microsoft Access Driver (*.mdb, *.accdb)};DBQ=C:\path\to\yourdb.accdb;'
    return pyodbc.connect(conn_str)

# --- Home Page ---
@app.route('/')
def index():
    return render_template('scorecard.html')

# --- Submit Form ---
@app.route('/submit', methods=['POST'])
def submit():
    username = request.form.get('username')
    parameter = request.form.get('parameter')
    rating = request.form.get('rating')

    conn = get_db_connection()
    cursor = conn.cursor()

    # Optional: check if record already exists for this user + parameter
    cursor.execute("""
        SELECT COUNT(*) FROM tblRatings WHERE UserName=? AND ParameterName=?
    """, (username, parameter))
    exists = cursor.fetchone()[0]

    if exists:
        # Update existing rating
        cursor.execute("""
            UPDATE tblRatings 
            SET RatingValue=? 
            WHERE UserName=? AND ParameterName=?
        """, (rating, username, parameter))
    else:
        # Insert new rating
        cursor.execute("""
            INSERT INTO tblRatings (UserName, ParameterName, RatingValue)
            VALUES (?, ?, ?)
        """, (username, parameter, rating))

    conn.commit()
    conn.close()
    return "âœ… Rating saved or updated successfully!"

if __name__ == '__main__':
    app.run(debug=True)


